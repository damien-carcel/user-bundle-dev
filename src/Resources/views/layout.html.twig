{% extends "CarcelUserBundle::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/carceluser/css/user.css') }}" rel="stylesheet" />
{% endblock %}

{% block container %}container-fluid{% endblock %}

{% block insection %}
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div class="col-lg-12">
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
{% endblock %}

{% block footer %}
    <footer class="panel-footer text-center">
        <div class="col-lg-12">
            {{ 'now'|date('d/m/Y - H:i') }}
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                |
                {{ 'layout.logged_in_as'|trans({'%username%': ''}, 'FOSUserBundle') }}<a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a>
                |
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('carcel_user_admin_index') }}">Page d'adminitration</a>
                    |
                {% endif %}
                <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
        </div>
    </footer>
{% endblock %}
